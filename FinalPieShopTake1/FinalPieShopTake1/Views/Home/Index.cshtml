@model IEnumerable<FinalPieShopTake1.Models.Pies>

@{
    ViewBag.Title = "Home Page";
}
<main class="main">

    <header>
        <h1 class="pageTitle" style=" color:mediumseagreen;text-align: center;text-shadow: 2px 2px 4px violet;
        font-family: Bradley Hand">
            WELCOME TO BETHANY'S PIE SHOP
            <img src="~/images/architecture-and-city.svg" height=" 70" width="70"  />
        </h1>
    </header>

</main>
<aside class="pull-left">

    <img src="~/images/bethanylogo.png" style="height:280px;width:250px;" />
    <div style="background-color:whitesmoke;height:40px;width:242px;color:mediumorchid; font-family: Bradley Hand;font-size:20px ">

        <p> <img src="~/images/calendar.svg" height=" 30" width="30" /> <span id="datetime"></span></p>


    </div>

    <div style="background-color:whitesmoke;height:40px;width:242px;color:red; font-family: Bradley Hand;font-size:20px ">

        <p> <img src="~/images/sale.svg" height=" 30" width="30" />   Today's Special Offer</p>


    </div>

</aside>
<div class="row carousel-holder"style="padding-top:10px">
    <div class="col-md-9">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img class="slide-image" src="~/images/bethany-fullsize.jpg" alt="" style="height:350px;width:900px;">
                </div>
                <div class="item">
                    <img class="slide-image" src="~/images/pasterries.jpg" alt="" style="height:350px;width:900px;">
                </div>
                <div class="item">
                    <img class="slide-image" src="~/images/cakes.jpg.jpg" alt="" style="height:350px;width:900px;">
                </div>
            </div>
            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </div>
</div>

<div>
    <h2 style="color:mediumpurple;font-family: Bradley Hand">Pies Of The Week<img src="~/images/sweet.svg" title="title" alt="additional title" style="height:50px;width:50px" /></h2>

</div>

<div class="row">
<div class="card-group">

    @foreach (var item in Model)
    {
        if (item.IsPieOfTheWeek)
        {
            <div class="col-md-4">
                <div class="thumbnail">
                    <img src="@Url.Content(item.ImageThumb)" alt="" height="250" width="350">

                    <h3 style="font-family: Bradley Hand">
                        @Html.ActionLink(item.Name, "Details", "Home", new { id = item.Id }, null)</h3>
                        <div class="card-body">
                            <div class="caption">
                                <h3 class="pull-right" style="font-family: Bradley Hand">Price:Rs. @item.Price</h3>
                                <h3 class="btn btn-success">@item.Rating
                                <i class="fa fa-star" aria-hidden="true" style="color:white"></i>
                               </h3>
                                <h3>
                                    <a asp-controller="Pie" asp-action="Details" asp-route-id="@item.Id"></a>
                                </h3>
                                <p style="font-family:Algerian;font-size:18px">@item.SDescription<i class="fa fa-heart  text-danger " aria-hidden="true"></i></p>
                            </div>
                            @*<p class="card-text">@item.SDescription</p>
                Rs: <p class="card-text"><small class="text-muted">@item.Price</small></p>*@
                        <h5 class="card-title btn btn-primary" style="font-family: Bradley Hand">
                            <i class="fa fa-cart-plus  " aria-hidden="true"></i>@Html.ActionLink("Add to Cart", "AddtoCart", "AddToCart", new { id = item.Id }, new { @style = "font-family: Bradley Hand; color:white;font-size:20px" })
                        </h5>

                        </div>
                </div>
            </div>
        }
    }

</div>
</div>
<div>
    <h2 style="color: mediumpurple;
        font-family: Bradley Hand">Pies in stock<img src="~/images/fast-food.svg" title="title" alt="additional title" style="height:50px;width:50px" /></h2>

</div>
