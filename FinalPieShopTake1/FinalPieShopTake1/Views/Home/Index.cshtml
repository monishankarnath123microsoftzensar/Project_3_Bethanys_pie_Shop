@model IEnumerable<FinalPieShopTake1.Models.Pies>

@{
    ViewBag.Title = "Home Page";
}
<main class="main">

    <header>
        <h1 class="pageTitle" style="background-color: aqua; color: white;text-align: center;text-shadow: 2px 2px 4px red;
        font-family: Bradley Hand, cursive">
            Welcome to Bethany's Pie Shop
        </h1>
    </header>

</main>
<div class="row carousel-holder">
    <div class="col-md-12">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img class="slide-image" src="~/images/bethany-fullsize.jpg" alt="" style="height:400px;width:1200px;">
                </div>
                <div class="item">
                    <img class="slide-image" src="~/images/products/applepie.jpg" alt="" style="height:400px;width:1200px;">
                </div>
                <div class="item">
                    <img class="slide-image" src="~/images/products/cheesecake.jpg" alt="" style="height:400px;width:1200px;">
                </div>
            </div>
            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
    </div>
</div>
<div>
    <h2 style="color:mediumpurple;">Pies Of The Week<img src="~/images/PieIcon.png" title="title" alt="additional title" style="height:50px;width:50px" /></h2>

</div>
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="~/images/products/blueberrycheesecakesmall.jpg" alt="">
        <div class="caption">
            <h3 class="pull-right">Price is 12$</h3>
            <h3>
                <a asp-controller="Pie" asp-action="Details" asp-route-id=""></a>
            </h3>
            <p>You'll love it  <i class="fa fa-heart  text-danger " aria-hidden="true"></i></p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-pieId=""><i class="fa fa-cart-plus fa-2x " aria-hidden="true"></i>Add to cart</a>
            </p>
        </div>
    </div>
</div>

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="~/images/products/cranberrypiesmall.jpg" alt="">
        <div class="caption">
            <h3 class="pull-right">Price is 10$</h3>
            <h3>
                <a asp-controller="Pie" asp-action="Details" asp-route-id=""></a>
            </h3>
            <p>Its Heaven  <i class="fa fa-smile text-success " aria-hidden="true"></i></p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-pieId=""><i class="fa fa-cart-plus fa-2x " aria-hidden="true"></i>Add to cart</a>
            </p>
        </div>
    </div>
</div>
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="~/images/products/pumpkinpiesmall.jpg" alt="">
        <div class="caption">
            <h3 class="pull-right">Price is 11$</h3>
            <h3>
                <a asp-controller="Pie" asp-action="Details" asp-route-id=""></a>
            </h3>
            <p>You'll love it<i class="fa fa-heart  text-danger " aria-hidden="true"></i></p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-pieId=""><i class="fa fa-cart-plus fa-2x " aria-hidden="true"></i>Add to cart</a>
            </p>
        </div>
    </div>
</div>


<div class="card-group">
    
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="thumbnail">
                <img src="@Url.Content(item.ImageThumb)" alt="">


                @Html.ActionLink(item.Name, "Details", "Home", new { id = item.Id }, null)
                <div class="card-body">

                    <p class="card-text">@item.SDescription</p>
                    Rs: <p class="card-text"><small class="text-muted">@item.Price</small></p>
                    <h5 class="card-title">
                        <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                           asp-route-pieId=""><i class="fa fa-cart-plus fa-2x " aria-hidden="true"></i>Add to cart</a>
                    </h5>

                </div>
            </div>
        </div>
    }

</div>


