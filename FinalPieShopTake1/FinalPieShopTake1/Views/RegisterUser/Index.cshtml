@model FinalPieShopTake1.Models.RegisterUser
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron" style="background-image:linear-gradient(grey,white);padding-left:300px;color:black">
    <h2 style="font-family: Bradley Hand;color:white;display:inline-block">Register   :</h2><span style="display:inline-block">(All <span style="color:crimson">*</span> fields are Mandatory)</span>
    <aside class="pull-right">

        <img src="~/images/bethanylogo.png" style="height:300px;width:300px;" />

    </aside>

    @using (Html.BeginForm("Index", "RegisterUser", FormMethod.Post))
    {

        <div class="form-group">
            <div class="pull-left" style="padding-right: 53px;font-family: Bradley Hand;">
                @Html.LabelFor(m => m.FName, new { area = " " })<span style="color:crimson">*</span>
            </div>

            @Html.TextBoxFor(m => m.FName, new { placeholder = "Enter First Name", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FName, null, new { @class = "text text-danger" })



        </div>

        <div class="form-group">
            <div class="pull-left" style="padding-right: 55px;font-family: Bradley Hand;">
                @Html.LabelFor(m => m.LName)<span style="color:crimson">*</span>
            </div>

            @Html.TextBoxFor(m => m.LName, new { placeholder = "Enter Last Name", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.LName, null, new { @class = "text text-danger" })

        </div>

        <div class="form-group">
            <div class="pull-left" style="padding-right: 72px;font-family: Bradley Hand;">
                @Html.LabelFor(m => m.Address)<span style="color:crimson">*</span>
            </div>

            @Html.TextAreaFor(m => m.Address, new { placeholder = "Enter Address", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Address, null, new { @class = "text text-danger" })

        </div>
        <div class="form-group">
            <div class="pull-left" style="padding-right: 74px;font-family: Bradley Hand;">
                @Html.LabelFor(m => m.ZipCode)
            </div>

            @Html.TextBoxFor(m => m.ZipCode, new { placeholder = "Enter Zip Code", @class = "form-control" })

        </div>

        <div class="form-group">
            <div class="pull-left" style="padding-right: 100px;font-family: Bradley Hand;">
                @Html.LabelFor(m => m.City)
            </div>

            @Html.TextBoxFor(m => m.City, new { placeholder = "Enter City", @class = "form-control" })

        </div>
        <div class="form-group">
            <div class="pull-left" style="        padding-right: 95px;
        font-family: Bradley Hand;
        ">
                @Html.LabelFor(m => m.State)
            </div>

            @Html.TextBoxFor(m => m.State, new { placeholder = "Enter State", @class = "form-control" })

        </div>


        <div class="form-group">
            <div class="pull-left" style="        padding-right: 64px;
        font-family: Bradley Hand;
        ">
                @Html.LabelFor(m => m.PhoneNo)<span style="color:crimson">*</span>
            </div>

            @Html.TextBoxFor(m => m.PhoneNo, new { placeholder = "Enter Phone No.", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PhoneNo, null, new { @class = "text text-danger" })

        </div>
        <div class="form-group">
            <div class="pull-left" style="        padding-right: 82px;
        font-family: Bradley Hand;
        ">
                @Html.LabelFor(m => m.Email)<span style="color:crimson">*</span>
            </div>

            @Html.TextBoxFor(m => m.Email, new { placeholder = "Enter Email Id", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text text-danger" })
            @Html.ValidationMessage("EmailExist", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            <div class="pull-left" style="        padding-right: 62px;
        font-family: Bradley Hand;

    ">
                @Html.LabelFor(m => m.Password)<span style="color:crimson">*</span>
            </div>

            @Html.PasswordFor(m => m.Password, new { placeholder = "*******", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text text-danger" })

        </div>
        <div class="form-group">
            <div class="pull-left" style="font-family: Bradley Hand;padding-right:9px">

                @Html.LabelFor(m => m.ConfirmPassword)<span style="color:crimson">*</span>
            </div>

            @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "*******", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "text text-danger" })
        </div>


        @Html.HiddenFor(m => m.Id)
        @Html.AntiForgeryToken()
        <div style="padding-left:180px">
            <button type="submit" class="btn btn-primary" onclick="myFunction()" style="font-family: Bradley Hand;">Register Now</button>
            @Html.ValidationMessage("Error", null, new { @class = "text text-danger" })
        </div>
    }
    @section scripts
    {
        @Scripts.Render("~/bundles/jqueryval")
    }
    <script>
        function myFunction() {
            confirm("Please check your mail for activation link \n And verify your Account");
        }
    </script>
    <div style="margin-right:30px;text-align:center;padding-right:330px;padding-top:10px">

        <img src="~/images/google-hangouts.svg" height=" 30" width="50" />
        <img src="~/images/gmail.svg" height=" 50" width="50" style="padding-left:20px" />
        @*<a href="#"><svg class="svg-inline--fa fa-facebook fa-w-14 fa-2x text-primary mx-3" data-icon="facebook"><path fill="currentColor"></path></svg><i class="fab fa-facebook fa-2x text-primary mx-3"></i></a>
            <a href="#"><svg class="svg-inline--fa fa-google fa-w-14 fa-2x text-danger mx-3" data-icon="google"><path fill="currentColor"></path></svg><i class="fab fa-google fa-2x text-danger mx-3"></i></a>*@
    </div>
</div>
            

      
