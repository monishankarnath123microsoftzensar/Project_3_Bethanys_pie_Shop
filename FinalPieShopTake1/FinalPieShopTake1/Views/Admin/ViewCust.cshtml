@model FinalPieShopTake1.Models.RegisterUser
@{
    ViewBag.Title = "ViewCust";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div style="padding-top:80px">
    <h2>User Details:</h2>
<div style="display:inline-block;padding-left:80px;font-size:40px;color:mediumpurple">@Model.FName</div><div style="display:inline-block;padding-left:20px;font-size:40px;color:mediumpurple">@Model.LName</div>
     </div>
<div>
    <h2>User's Address</h2>
    <div style="display:inline-block;font-size:40px;padding-left:80px;color:mediumpurple">@Model.Address</div>
