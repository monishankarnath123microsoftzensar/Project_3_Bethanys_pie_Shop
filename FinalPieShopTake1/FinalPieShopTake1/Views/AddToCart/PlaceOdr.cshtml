@model FinalPieShopTake1.Models.RegisterUser
@{
    ViewBag.Title = "PlaceOdr";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="padding-top:80px">
    <h2>User Details:</h2>
    <div style="display:inline-block;padding-left:80px;font-size:40px;color:mediumpurple">@Model.FName</div><div style="display:inline-block;padding-left:20px;font-size:40px;color:mediumpurple">@Model.LName</div>
</div>
<div>
    <h2>User's Address</h2>
    <div style="display:inline-block;font-size:40px;padding-left:80px;color:mediumpurple">@Model.Address</div>
    <div style="display:inline-block;padding-left:20px;font-size:40px;color:mediumpurple">@Model.ZipCode</div>
    <div style="display:inline-block;padding-left:20px;font-size:40px;color:mediumpurple">@Model.City</div>
    <div style="display:inline-block;padding-left:20px;font-size:40px;color:mediumpurple">@Model.State</div>

</div>
<div>
    <h2>User's Account Details</h2>
    <div style="display:inline-block;padding-left:80px;font-size:40px;color:mediumpurple">@Model.PhoneNo</div>
    <div style="display:inline-block;padding-left:20px;font-size:40px;color:mediumpurple">@Model.Email</div>

</div>
@Html.ActionLink("Edit Address", "EditAdd", new { id = Session["UserId"] }, new { @class = "btn btn-info" })
@Html.ActionLink("Confirm", "SendMail", "AddToCart", null, new { @class = "btn btn-success" })